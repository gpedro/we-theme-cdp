<div class="messenger-column">
  <div class="messenger-chat-area">
    <div class="contact-chat" tabindex="0">
      <div class="header">
        {{#if isOnline}}
          <i class="IR sprt-chat"></i>
        {{else}}
          {{!--<span class="messenger-status"><img width='17px' {{bind-attr src=cdpOffline}}></span>--}}
        {{/if}}
        {{!-- <span class="contact-name">{{contactUser.displayName}}</span> --}}
        <span class="contact-name"> {{displayName}}</span>
      </div>

      <div class="actions">
        <button {{action 'toggleList'}} type="button" class="remove btn btn-xs">
          <i class="IR sprt-chat-minimize"></i>
        </button>
        <button {{action 'closeList'}} type="button" class="remove btn btn-xs">
          <i class="IR sprt-chat-close"></i>
        </button>
      </div>

      <div class="action-bar">

      </div>

      {{#if isListOpen}}
        <div>
          {{#if isLoading}}
            <div class="messenger-loading"><img src="/core/images/loading.gif">Carregando ... </div>
          {{/if}}

          {{render 'messenger/messages' messages id=boxId }}

          <div class="realtime-status">
            {{#if isWriting}}
              <div class="contact is-writing">
                <span class="small is-writing-text">Digitando...</span>
              </div>
            {{/if}}
          </div>

          <div class="footer">
            <form {{action "sendMessage" on="submit"}} method="post">
              <i class="IR sprt-chat-lines"></i>
              <div class="input-group">
                {{input name="messageNew" value=messageNew  type="text" placeholder=messagePlaceholder classNames="input-xs"}}
                <span class="input-group-btn">
                  <button  {{action "sendMessage"}} class="btn btn-xs btn-send" type="submit"><i class="IR sprt-chat-send"></i></button>
                </span>
              </div>
            </form>
          </div>
        </div>
      {{/if}}

    </div>
  </div>
</div>