<!-- Splash Global
    Use for welcome to user -->
{{#if App.auth.isAuthenticated}}
  <section id="splash-global" class="section">
    <div class="container">

        <div class="timeline-wrapper">
          <h3>{{t 'Timeline'}} <small><br>{{t 'Acompanhe o que acontece na rede'}}</small></h3>
          <div id="user-list">
            {{render 'post/sharebox' postNew}}
            {{render 'posts/list' posts controller='Posts'}}
          </div>
        </div>

    </div><!-- end container -->
  </section><!-- end splash global -->
{{else}}
  <section class="section-home">
    {{partial 'partials/home-about-site'}}

    <div class="container">
      <!-- collapse-blocks -->
      {{partial 'partials/collapse-blocks'}}
      <!-- /collapse-blocks -->

      <!-- info-blocks -->
      {{partial 'partials/info-blocks'}}
      <!-- /info-blocks -->
    </div>

  </section>
{{/if}}
