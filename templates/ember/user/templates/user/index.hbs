<div class="row profile-timeline">
  <div class="col-md-6">
    <div class="timeline-section timeline-section-about">
      <h3 class="title">Sobre</h2>
      <div class="content">
      {{user.biography}}
      </div>
    </div>
    <div class="timeline-section timeline-section-relatos timeline-collapse blue">
      <h3 class="title"><i class="IR sprt-chevron-up"></i> Relatos</h2>
      <div class="content">
        <ul class="relatos-list">
		      {{#each relato in relatosProxy}}
		      	<li><i class="IR sprt-relato-1"></i>{{#link-to 'relato' relato.id}}{{relato.titulo}}{{/link-to}}</li>
		      {{/each}}
        </ul>
      </div>
      {{#link-to 'user.relatos' class="btn btn-link link-more"}}Ver todos{{/link-to}}
    </div>
    <div class="timeline-section timeline-section-comunidades blue timeline-collapse">
      <h3 class="title"><i class="IR sprt-chevron-up"></i> Comunidades</h2>
      <div class="content">
      {{#if comunidades}}
        <div class="carousel slide carousel-multiple" id="carousel-comunidades"  data-ride="carousel">
          <div class="carousel-inner">
          {{#each comunidade in comunidades}}
            <div {{bind-attr class=":item comunidade.active:active"}}>
              <div class="col-sm-4">
              <a {{bind-attr href=comunidade.link}}><img {{bind-attr src=comunidade.logo}} class="img-responsive img-circle">{{comunidade.title}}</a></div>
            </div>
          {{/each}}
          </div>
          <a class="left carousel-control" href="#carousel-comunidades" data-slide="prev"><i class="IR sprt-chevronbig-left"></i></a>
          <a class="right carousel-control" href="#carousel-comunidades" data-slide="next"><i class="IR sprt-chevronbig-right"></i></a>
        </div>
      {{else}}
        <div class="empty-section">
          {{user.displayName}} não está participando de nenhuma comunidade.
        </div>
      {{/if}}
      </div>
      {{#link-to 'user.comunidades' class="btn btn-link link-more"}}Ver todos{{/link-to}}
    </div>
