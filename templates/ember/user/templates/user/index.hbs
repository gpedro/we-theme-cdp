      <h3 class="title"><i class="IR sprt-chevron-up"></i> Amigos</h2>
      <div class="content">
        ...
      </div>
      <a href="#" class="btn btn-link link-more">Ver todos</a>
    </div> --}}
    <div class="timeline-section timeline-section-cursos green timeline-collapse">
      <h3 class="title"><i class="IR sprt-chevron-up"></i> Cursos</h2>
      <div class="content">
        {{#if cursos}}
          <div class="carousel slide carousel-multiple" id="carousel-cursos"  data-ride="carousel">
            <div class="carousel-inner">
            {{#each curso in cursos}}
              <div {{bind-attr class=":item curso.active:active"}}>
                <div class="col-sm-4">
                <a {{bind-attr href=curso.link}}><img {{bind-attr src=curso.logo}} class="img-responsive img-circle">{{curso.title}}</a></div>
              </div>
            {{/each}}
            </div>
            <a class="left carousel-control" href="#carousel-cursos" data-slide="prev"><i class="IR sprt-chevronbig-left"></i></a>
            <a class="right carousel-control" href="#carousel-cursos" data-slide="next"><i class="IR sprt-chevronbig-right"></i></a>
          </div>
        {{else}}
        <div class="empty-section">
          {{user.displayName}} não participou de nenhum curso.
        </div>
        {{/if}}
      </div>
      {{#link-to 'user.cursos' class="btn btn-link link-more"}}Ver todos{{/link-to}}
    </div>
  </div>
  <div class="col-md-6">
    <div class="activities-list">
      <h2 class="activities-title"><i class="IR sprt-activities"></i> Atividades</h2>
      {{we-iframe-activites drupalId=user.drupalId}}
    </div>
  </div>
</div>